    <SwitchPreferenceCompat
        android:defaultValue="@bool/pref_show_position_dflt_value"
        android:key="@string/pref_show_position_key"
        android:summaryOn="@string/pref_description_show_position_on"
        android:summaryOff="@string/pref_description_show_position_off"
        android:title="@string/pref_title_show_position" />

    <SwitchPreferenceCompat
        android:defaultValue="@bool/pref_caching_dflt_value"
