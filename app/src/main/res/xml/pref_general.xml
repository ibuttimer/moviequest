        android:entryValues="@array/pref_movie_list_values"
        android:key="@string/pref_movie_list_key"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_movie_list" />

    <ListPreference
        android:defaultValue="@string/pref_poster_size_dlft_value"
        android:entries="@array/pref_poster_size_titles"
