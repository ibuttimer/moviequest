<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/b_favourite_moviedetailsA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sml_margin"
        android:layout_weight="0.5"
        android:background="@color/colorAccent"
        android:drawableLeft="@drawable/ic_favorite_white_18dp"
        android:drawableStart="@drawable/ic_favorite_white_18dp"
        android:padding="@dimen/sml_padding"
        android:text="@string/add_to_favourites"
        android:textColor="@color/colorAccentText"
        android:textAlignment="center"
        android:textSize="@dimen/small_text" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />

</LinearLayout>