<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/sml_margin"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/colorCardviewBackground"
        card_view:cardCornerRadius="@dimen/cardview_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_index_movie_info_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="@dimen/sml_margin"
                android:background="@drawable/badge"
                android:padding="@dimen/badge_padding"
                android:textColor="@color/colorBadgeText" />

            <ImageView
                android:id="@+id/iv_poster_movie_info_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/sml_margin"
                android:paddingRight="@dimen/sml_margin"
                android:paddingBottom="@dimen/sml_margin"
                app:srcCompat="@mipmap/no_image_available" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>